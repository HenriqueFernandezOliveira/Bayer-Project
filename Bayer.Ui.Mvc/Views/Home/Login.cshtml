@model Bayer.Presentation.ViewModels.CandidatoViewModel

    <title>Portal de vagas Bayer - Login</title>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h5 text-gray-900 mb-4">Bem vindo ao portal de vagas Bayer!</h1>
                                    </div>
                                    @ViewBag.Mensagem
                                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "user" }))
                                    {

                                        <div class="form-group">
                                            @*<input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Email">*@
                                            @Html.EditorFor(x => x.Username, new { htmlAttributes = new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Email" } })
                                        </div>
                                        <div class="form-group">
                                            @*<input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Senha">*@
                                            @Html.EditorFor(x => x.Senha, new { htmlAttributes = new { @class = "form-control form-control-user", @id = "exampleInputPassword", @placeholder = "Senha", @type = "password" } })
                                        </div>

                                        <input value="Login" type="submit" class="btn btn-primary btn-user btn-block">
                                    }

                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("RecuperarSenha","Home")">Esqueceu sua senha?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("Registrar","Home")">Cria uma conta!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</body>