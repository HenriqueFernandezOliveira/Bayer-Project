@model Bayer.Presentation.ViewModels.ProvaViewModel

@{
    ViewBag.Title = "CriarProva";
}

<h2>Criar Prova</h2>

@ViewBag.mensagem
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DataHoraInicio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataHoraInicio, new { htmlAttributes = new { @class = "form-control", @Value = DateTime.Today, @type = "datetime-local" } })
                @Html.ValidationMessageFor(model => model.DataHoraInicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TempoProva, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TempoProva, new { htmlAttributes = new { @class = "form-control",type="time" } })
                @Html.ValidationMessageFor(model => model.TempoProva, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar Prova" class="btn btn-default" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
