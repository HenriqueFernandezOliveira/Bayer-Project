@model IEnumerable<Bayer.Presentation.ViewModels.PerguntaViewModel>

@{

    var numeroquestao = int.Parse(ViewData["numero"].ToString());
}

@foreach (var item in Model)
{
    numeroquestao++;

    <h5>
        @(numeroquestao)ª questão :
    </h5>
    <td>
        @Html.DisplayFor(modelItem => item.Texto)
    </td>

    @Html.Partial("_viewAlternativasPergunta", item.Alternativas)

    <hr style="border:2px solid black" />
}

